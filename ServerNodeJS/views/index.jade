extends layout

block content
  h1= title
  p Welcome to PeopleTag App

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 User Info
      p
          strong ID:
          | <span id='userId'></span>
          br
          strong DisplayName:
          | <span id='userDisplayName'></span>
          br
          strong Current Latitude:
          | <span id='userCurrentLatitude'></span>
          br
          strong Current Longitude:
          | <span id='userCurrentLongitude'></span>
          br
          strong Position reported at:
          | <span id='userPositionReportedAt'></span>
          br
          strong Created at:
          | <span id='userCreatedAt'></span>
          br
          strong Updated at:
          | <span id='userUpdatedAt'></span>
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th ID
          th Display Name
          th Current Latitude
          th Current Longitude
          th Actions
        tbody
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser
        fieldset
            input#inputDisplayName(type='text', placeholder='Display Name')
            br
            input#inputCurrentLatitude(type='text', placeholder='Current Latitude')
            input#inputCurrentLongitude(type='text', placeholder='Current Longitude')
            br
            button#btnAddUser Add User
    // /ADD USER

  // /WRAPPER